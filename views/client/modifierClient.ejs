<%- include('../partials/styleDashboard') -%>
<%- include('../partials/styleAddProduct') -%>
<%- include('../partials/style3') -%>
<%- include('../partials/style4') -%>
<%- include('../partials/style5') -%>
<%- include('../partials/header2') -%>


               
<!-- Breadcrumb -->
<div class="breadcrumb flat">
    <a href="<%= '/users/modifier/'  + user.id %>">Admin</a>
    <a href="/client/clientLists">Liste Clients</a>
    <a href="/client/addClients">Ajouter Clients</a> 
    <a href="/client/modifier/<%= event.id %>" class="active">Modifier Clients</a>
</div>
<!-- Fin Breadcrumb -->
         




<!-- ROW génerale -->
<div class="row">



    <!-- Client Cart -->
    <div class="col-md-4" id="leftSection">

        <div class="card card-user">

            <div class="image">
                <img src="/img/bg5.jpg" alt="...">
            </div>

            <div class="card-body" >
                <div class="author">
                    <a href="#">
                        <img class="avatar border-gray" src="<%= '/imgClient/' + event.avatar%>" alt="...">
                    </a>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12 ">
                            <span style="font-weight: bolder; font-size: medium;"><%= event.lastName%>  <%= event.firstName%></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12 ">
                            <span style="font-size: medium;"><%= event.codeClient%></span>
                        </div>
                    </div>

                </div>

            </div>


            <div class="card-footer" style="height: 50px;"> </div>
                         
        </div>
    </div>
    <!-- /Client Cart -->











     <!-- Client informations et Modifications -->
    <div class="col-md-8">

        <!-- UL-->
        <ul class="nav nav-tabs" id="navTabUser">

            <li class="active">
                <a data-toggle="tab" href="#home">
                    <div class="card-header">
                        <h5 class="card-title">Modifier Profile</h5>
                    </div>
                </a>
            </li>
            
            <li>
                <a data-toggle="tab" href="#menu2">
                    <div class="card-header">
                        <h5 class="card-title">Modifier Photo</h5>
                    </div>
                </a>      
            </li> 

        </ul>
        <!-- /UL-->
    


        <!-- TAB-->
        <div class="tab-content">

            <!-- tab 1 -->
            <div id="home" class="tab-pane in active">
                <div class="card card-user">     
                    <div class="card-body">

                    <%- include('../message/modifierClientMsg') -%>

                        <!-- FORM 1 -->
                        <form action="/client/modifier" method="POST" class="modifierProfilClientForm"> 

                            <div class="form-row">

                                <div class="form-group col-md-5">
                                    <label for="lastName" style="font-size: 2rem;">Nom</label>
                                    <input type="text" class="form-control" name="lastName" id="lastName" value="<%= event.lastName%>">
                                </div>

                                <input type="hidden" name="ids" value="<%=event.id%>">

                                <div class="form-group col-md-6">
                                    <label for="firstName" style="font-size: 2rem;">Prenom</label>
                                    <input type="text" class="form-control" name="firstName" id="firstName" value="<%= event.firstName%>">
                                </div>
                                     
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="codeClient">Code Client</label>
                                        <input type="number" class="form-control" name="codeClient" id="codeClient" value="<%=event.codeClient %>">
                                    </div>
                                </div>

                                <input type="text" value="<%=event.avatar%>" name="noTofs" id="noTofs" style="display: none;"> 
          
                                <button type="submit" class="btn  modifierProfilClientButton btnVoir" >modifier</button>

                                <button type="button" class="btn btnVoir2" data-toggle="modal" data-target="#exampleModal" data-id="<%= event.id%>">
                                      supprimer
                                </button>
          
                        </form>  
                        <!-- /FORM 1 -->

                    </div>
                </div>
            </div>
            <!-- /tab 1 -->
        

            <!-- tab2 -->
            <div id="menu2" class="tab-pane">       
                <div class="card card-user">     
                    <div class="card-body">

                        <!-- FORM 2 -->
                        <form action="/Client/modifierTof" method="POST" enctype="multipart/form-data" class="modifierTofClientForm">
                                      
                            <div>
                                <label for="avatar" style="font-size: 2rem;">Cliquer sur l'icone pour charger votre photo</label>
                                <div class="row align-items-end">               
                                    <div class="col-sm-3">
                                        </div>
                                            <div class="col-sm-3">
                                   
                                                <input type="file" name="avatar" id="avatar"  class="inputfile inputfile-5 " data-multiple-caption="{count} files selected" multiple onchange="readURL(this)" />
                                                <label for="avatar" >
                                                      
                                                    <figure>
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                                            <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/>
                                                        </svg>
                                                    </figure> 
                                                    <span>Uploader ici !</span>
                                                </label>

                                            </div>

                                            <div class="col-sm-6" >
                                                <img src="<%= '/imgClient/' + event.avatar%>" alt="" class="dropzone"  id="imagePlaceholder" height="200px" width="200px" style="border-radius: 50%">
                                            </div>
                                              
                                </div>
                            </div>

                            <div style="display: none;">
                                <input type="text" name="nomTof" id="nomTof" value="<%= event.lastName%>">
                                <input type="text" name="prenomTof" id="prenomTof" value="<%= event.firstName%>">
                                <input type="text" name="codeClientTof" id="codeClientTof" value="<%= event.codeClient%>">
                                <input type="text" name="remiseTof" id="remiseTof" value="<%= event.remise%>">
                                <input type="text" name="idTof" id="idTof" value="<%=event.id%>">
                            </div>

                            <button type="submit" class="btn btnEnregistrer modifierTofClientButton">modifier</button>
                        </form>
                        <!-- /FORM 2 -->

                    </div>
                </div>
            </div>
           <!-- /tab2 -->
    
        </div>
        <!-- /TAB-->

    </div>
    <!-- /Client informations et Modifications -->
</div>
<!-- ROW génerale -->






<!-- Madal (Confirmation suppression Client) -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="background-color: #34495e ;">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="color:white">Confirmation de la suppression</h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>



            <div class="modal-body" style="color:white;  text-align: center;">
                <div class="form-group col-md-12" style="margin-top: 20px;">
                    <label for="nom" ><span>De : </span><%= event.lastName%> <%= event.firstName%></label>
                </div>
            </div>




            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button class="btn btn-danger" onclick="deleteClient()" id="deleteBtn" data-id="<%= event.id%>">supprimer</button>
            </div>


        </div>
    </div>
</div> 
<!-- /Madal (Confirmation suppression Client) -->








