<!-- Breadcrumb -->
<div class="breadcrumb flat">
    <a href="<%= '/users/modifier/'  + user.id %>">Admin</a>
    <a href="/product/ProductList">Liste Produits</a>
    <a href="/product/addProduct" class="active">Ajouter produits</a>
</div>
